# Oaysus CLI Environment Variables
# Copy this file to .env and modify as needed for local development
# Production defaults are used when not set

# ============================================
# API Endpoints (override for local development)
# ============================================

# Authentication server URL
# Default: https://auth.oaysus.com
# NEXT_PUBLIC_OAYSUS_SSO_URL=http://localhost:3000

# Admin dashboard URL (for magic link redirects)
# Default: https://admin.oaysus.com
# NEXT_PUBLIC_OAYSUS_ADMIN_URL=http://localhost:3001

# R2 CDN URL for component hosting
# Default: https://pub-71eb20e9b97849f18a95eaa92feb648a.r2.dev
# NEXT_PUBLIC_R2_PUBLIC_URL=http://localhost:9000

# ============================================
# Environment Configuration
# ============================================

# Deployment environment: 'prod' | 'dev' | 'local'
# Default: prod
# NEXT_PUBLIC_API_STAGE=local

# Developer namespace (used for local R2 paths)
# Only used when API_STAGE=local
# Format: local/{developer}/{websiteId}/{themeName}/{version}
# DEVELOPER=your-name

# ============================================
# Debugging
# ============================================

# Enable debug logging (console output)
# Default: false
# DEBUG=true
